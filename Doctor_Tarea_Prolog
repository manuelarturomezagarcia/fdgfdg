% un horario esta libre si existe en la disponibilidad,
% pero no aparece como cita ocupada
dr_doctor(dictor).

dia(lunes, 11)
dia(lunes,12).

Paciente(Ana).
Paciente(Pancho).
Paciente(Meni).

cita_ocupa(ana, lunes,).


